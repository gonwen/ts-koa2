{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "noImplicitAny": false,
    "outDir": "./dist",
    "sourceMap": false,
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true,
    "strictFunctionTypes": false,
    "typeRoots": [
      "./typings/*",
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*",
    "./typings/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
